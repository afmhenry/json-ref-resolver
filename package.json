{
  "name": "@stoplight/json-ref-resolver",
  "version": "0.0.0",
  "description": "Recursively resolve JSON pointers and remote authorities.",
  "keywords": [
    "json-parser",
    "json",
    "json-schema",
    "resolver",
    "openapi",
    "swagger"
  ],
  "main": "src/index.ts",
  "sideEffects": false,
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/json-ref-resolver.git"
  },
  "license": "UNLICENSED",
  "files": [
    "**/*"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p ./tsconfig.build.json && ts-node scripts/post-build-preparation",
    "build.docs": "typedoc --out docs --target es6 --theme minimal --mode file --excludeExternals --excludeNotExported --excludePrivate --excludeProtected src",
    "test": "jest",
    "test.watch": "jest --watch",
    "test.prod": "yarn lint && yarn test --coverage --no-cache",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "format": "tslint --fix src/**/*.ts",
    "commit": "git-cz",
    "release": "semantic-release",
    "release.docs": "ts-node scripts/gh-pages-publish",
    "postpublish": "cp -r dist/package.json ."
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "pkgRoot": "dist",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "index.ts",
      "types.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "@stoplight/fast-safe-stringify": "2.1.x",
    "dependency-graph": "0.7.x",
    "fast-memoize": "2.5.x",
    "immer": "1.7.x",
    "lodash": "4.x.x",
    "urijs": "1.19.x"
  },
  "devDependencies": {
    "@commitlint/cli": "7.x.x",
    "@commitlint/config-conventional": "7.x.x",
    "@semantic-release/commit-analyzer": "6.x.x",
    "@semantic-release/git": "7.x.x",
    "@semantic-release/github": "5.x.x",
    "@semantic-release/npm": "5.x.x",
    "@semantic-release/release-notes-generator": "7.x.x",
    "@types/jest": "23.x.x",
    "@types/lodash": "4.x.x",
    "@types/node": "10.x.x",
    "@types/urijs": "1.15.x",
    "benchmark": "2.x.x",
    "commitizen": "3.x.x",
    "cz-conventional-changelog": "2.x.x",
    "husky": "1.x.x",
    "jest": "23.x.x",
    "lint-staged": "8.x.x",
    "prettier": "1.14.x",
    "rimraf": "2.x.x",
    "semantic-release": "15.x.x",
    "ts-jest": "23.x.x",
    "ts-node": "7.x.x",
    "tslint": "5.x.x",
    "tslint-config-stoplight": "1.x.x",
    "typedoc": "0.13.x",
    "typescript": "3.1.x"
  }
}
