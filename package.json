{
  "name": "@stoplight/json-ref-resolver",
  "version": "1.0.3",
  "description": "",
  "keywords": [],
  "main": "dist/json-ref-resolver.umd.js",
  "module": "dist/json-ref-resolver.es5.js",
  "typings": "dist/types/json-ref-resolver.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/json-ref-resolver.git"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "start": "rollup -c rollup.config.ts -w",
    "prebuild": "rimraf dist",
    "build": "rollup -c rollup.config.ts",
    "build.docs": "typedoc --out docs --target es6 --theme minimal --mode file --excludeExternals --excludeNotExported --excludePrivate --excludeProtected src",
    "test": "jest",
    "test.watch": "jest --watch --coverage=false",
    "test.prod": "npm run lint && npm run test -- --coverage --no-cache",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "commit": "git-cz",
    "release": "semantic-release",
    "release.docs": "ts-node scripts/gh-pages-publish"
  },
  "lint-staged": {
    "{src}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test.prod && npm run build"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@stoplight/fast-safe-stringify": "2.1.x",
    "dependency-graph": "0.7.x",
    "fast-memoize": "2.5.x",
    "immer": "1.7.x",
    "lodash": "4.x.x",
    "urijs": "1.19.x"
  },
  "devDependencies": {
    "@commitlint/cli": "7.x.x",
    "@commitlint/config-conventional": "7.x.x",
    "@semantic-release/commit-analyzer": "6.x.x",
    "@semantic-release/git": "7.x.x",
    "@semantic-release/github": "5.x.x",
    "@semantic-release/npm": "5.x.x",
    "@semantic-release/release-notes-generator": "7.x.x",
    "@types/jest": "23.x.x",
    "@types/lodash": "4.x.x",
    "@types/node": "10.x.x",
    "@types/urijs": "1.15.x",
    "benchmark": "2.x.x",
    "commitizen": "3.x.x",
    "cz-conventional-changelog": "2.x.x",
    "husky": "1.x.x",
    "jest": "23.x.x",
    "lint-staged": "7.x.x",
    "prettier": "1.14.x",
    "rimraf": "2.x.x",
    "rollup": "0.66.x",
    "rollup-plugin-commonjs": "9.2.x",
    "rollup-plugin-json": "3.1.x",
    "rollup-plugin-node-resolve": "3.4.x",
    "rollup-plugin-sourcemaps": "0.4.x",
    "rollup-plugin-terser": "2.x.x",
    "rollup-plugin-typescript2": "0.17.x",
    "semantic-release": "15.x.x",
    "ts-jest": "23.x.x",
    "ts-node": "7.x.x",
    "tslint": "5.x.x",
    "tslint-config-stoplight": "1.x.x",
    "typedoc": "0.13.x",
    "typescript": "3.1.x"
  }
}
